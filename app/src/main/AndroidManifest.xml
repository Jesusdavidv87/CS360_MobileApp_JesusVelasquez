<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myfirstapp_jesusvelasquez">

    <!-- Permissions / features (outside <application>) -->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-feature android:name="android.hardware.telephony" android:required="false" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyFirstApp_JesusVelasquez">

        <!-- Launcher (first screen) -->
        <activity
            android:name=".ui.LoginActivity1"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other screens (no launcher filter) -->
        <activity android:name=".ui.InventoryActivity" android:exported="false" />
        <activity android:name=".ui.LoginActivity" android:exported="false" />
        <activity android:name=".ui.SmsActivity" android:exported="false" />

    </application>
</manifest>




